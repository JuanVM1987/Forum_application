@page "/CreatePost"
@using HttpClients.ClientInterface
@using Domain.DTOs
@inject NavigationManager navMgr
@inject IAuthService auth
@inject IPostService _service;

<AuthorizeView>
    <Authorized>
        <section class="vh-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 text-black">

                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                            
                                		<form style="width: 23rem;">
                                            <h2>Create post</h2>
	                                        <div class="form-group">
                                		        <label for="title">Title</label>
                                		        <input type="text" class="form-control" id="title" @bind="title"/>
                                		    </div>
                                		    
                                		    <div class="form-group">
                                		        <label for="description">Description</label>
                                		        <textarea rows="5" class="form-control" id="description" @bind="body" ></textarea>
                                		    </div>
                                            <div class="form-group">
                                		        <button class="btn btn-primary" @onclick="CreateAsync">
                                		            Create
                                		        </button>
                                            </div>
                                        </form>
                        </div>

                    </div>
                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp"
                             alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                    </div>
                </div>
            </div>
        </section>

    </Authorized>
    <NotAuthorized>
        <div class="form-outline mb-4" style="margin-top: 50px">
            <label class="form-label">You must login first!</label>
        </div>

    </NotAuthorized>
</AuthorizeView>

@code {
    PostCreationDto dto;
    private string username;
    private string title;
    private string body;
    private string msg = "";
    private bool showModal = false;

    private async Task CreateAsync()

    {
        try
        {
            username = auth.GetAuthAsync().Result.Identity!.Name!;
            dto = new PostCreationDto(username, title, body);
            
            await _service.CreateAsync(dto);
            
            navMgr.NavigateTo("/");
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message + "----------------------------------------------";
        }
    }



}